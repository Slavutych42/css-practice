	<body>
		<div class="page page--dashboard">
			<aside class="page__aside aside vertical vertical--big">
				<div class="text aside__logo">Sidebar</div>
				<nav class="vertical vertical--small">
					<a href="#" class="nav-button nav-button--active click">
						<span class="icon nav-button__icon" style="background-image: url('/svg/home.svg')"></span>
						<span class="text text--light">Home</span>
					</a>
					<a href="#" class="nav-button click">
						<span class="icon nav-button__icon" style="background-image: url('/svg/table.svg')"></span>
						<span class="text text--light">Orders</span>
					</a>
					<a href="#" class="nav-button click">
						<span class="icon nav-button__icon" style="background-image: url('/svg/grid.svg')"></span>
						<span class="text text--light">Products</span>
					</a>

					<div class="field__block click">
						<div class="field field--select">
							<span class="text text--light">Choose...</span>
						</div>
						<select class="field__select">
							<option value="">seggs</option>
						</select>
					</div>
				</nav>
			</aside>
			<header class="header">
				<div class="layout header__content text--small">
					<div class="header__search relative">
						<input type="text" placeholder="Search" class="text field field--header">
						<span class="icon header__icon-search" style="background-image: url('/svg/ic_baseline-search.svg')"></span>
						<span class="icon icon--header-settings icon--button icon--color-blue click" style="background-image: url('/svg/mingcute_settings-6-line.svg')"></span>
					</div>					
				</div>
				<div class="header--badge">
					<div class="icon--header-badge">
						<span class="icon icon--header-badge icon--button icon--color-orange click" style="background-image: url('/svg/iconoir_antenna-signal.svg')"></span>
					</div>
					<div class="icon--header-badge">
						<span class="icon icon--header-badge icon--button icon--color-light__blue click" style="background-image: url('/svg/material-symbols_translate.svg')"></span>
					</div>
					<div class="icon--header-badge">
						<span class="icon icon--header-badge icon--button icon--color-orange click" style="background-image: url('/svg/tabler_bell.svg')"></span>
					</div>
				</div>
			</header>
			<main class="main">
				<div class="layout">
					<section class="box analytic__block">
						<div class="analytic analytic--double analytic--purple">
							<span class="icon analytic__button icon--button icon--color-purple click" style="background-image: url('/svg/ph_money.svg')"></span>
							
							<div class="analytic__content relative vertical vertical--small">
								<div class="analytic__title text text--light">$500.00</div>
								<div class="analytic__info text text--small">Total earning</div>
								<span class="icon analytic__arrow" style="background-image: url('/svg/Group 1032.svg')"></span>

							</div>
						</div>

						<div class="analytic analytic--double analytic--blue">
							<span class="icon analytic__button icon--button icon--color-blue click" style="background-image: url('/svg/material-symbols_shopping-bag-outline.svg')"></span>
							
							<div class="analytic__content relative vertical vertical--small">
								<div class="analytic__title text text--light">$961</div>
								<div class="analytic__info text text--small">Total Order</div>
								<span class="icon analytic__arrow" style="background-image: url('/svg/Group 1032.svg')"></span>

							</div>
						</div>
						
						<div class="analytic--small analytic--small-blue">
							<span class="icon analytic__button icon--button icon--color-blue click" style="background-image: url('/svg/material-symbols_shopping-bag-outline.svg')"></span>
							
							<div class="analytic__content relative vertical vertical--small">
								<div class="analytic__title2  text--light">$203k</div>
