									<div class="field__block click">
										<span>State</span>
										<div class="field field--select">
											<span class="text text--light">Choose...</span>
										</div>
										<select class="field__select">
											<option value="">seggs</option>
										</select>
									</div>
								</div>
							</div>
							<div>
								<button class="payment__button">Continue to checkout</button>
							</div>
						</section>
