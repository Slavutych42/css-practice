<header class="header">
        <div>
            {{> logo}}
        </div>
        <nav class="header_nav">
            <div class="header_nav_right">
                {{> nav list=header}}
            </div>
        </nav>
    {{> divider}}
</header>
{{#with main}}
    <div class="main">
        <div class="main_content">           
            <h1 class="main_heading">{{heading}}</h1>
            <p class="main_description">{{description}}</p>
            <a href="{{href}}" class="button main_button">{{button}}</a>
        </div>
        <img src="{{image}}" alt="main image" class="main_image">
    </div>
{{/with}}
<main class="featured">
    {{#each featured}}
        <div class="card">
            <div class="card_image" style="background-image: url {{photo}}"></div>
            <h2 class="card_title">{{heading}}</h2>
            <p class="card_text">{{info}}</p>
            <a href="{{linkUrl}}" class="button card_button">{{linkText}}</a>
        </div>
    {{/each}}
</main>
<div class="actions">
    {{#each actions}}
        <div class="actions_content">
            <h3 class="actions_title">{{heading}}</h3>
            <a href="{{url}}" class="button actions_button">{{text}}</a>
        </div>
    {{/each}}
</div>
<footer class="page_block">
    {{> divider}}
    <div class="footer">
        <div>
            {{> logo}}
            <span class="footer_copyright">Copyright 2023-2024</span>
        </div>

        {{#each footer}}
            <div>
                <span class="footer_title">{{title}}</span>
                {{> nav list=links isVertical=true}}
            </div>
        {{/each}}
    </div>
</footer>