<header class="header">
        <div>
            {{> logo}}
        </div>
        <nav class="header_nav">
            <div class="header_nav_right">
                {{> nav list=header}}
            </div>
        </nav>
    {{> divider}}
</header>

<main class="main">
    {{#with info}}
        <div class="info">
            <h1 class="info_title">{{title}}</h1>
            <p class="info_text">{{description}}</p>
        </div>
    {{/with}}
    {{#with form}} 
        <form class="form">
            <h2 class="form_title">{{title}}</h2>

            <div class="form_input_list">
                {{#each inputs}}
                    <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="form-input-{{id}}">
                {{/each}}
            </div>

            <div class="form_checkbox">
                <input type="checkbox" name="{{checkbox.name}}">
                <label>{{checkbox.label}}</label>
            </div>

            <button type="submit" class="form_button">{{button}}</button>
            <p class="form_info">{{info}}</p>
        </form>
    {{/with}}
</main>

<div class="updates">
    {{#with updates}}
        <div>
            <h2>{{title}}</h2>
        </div>
        {{#each list}}
            <div class="updates_list">
                <div class="img" id="{{nickname}}">
                    32x32
                </div>
                <div class="block">
                    <div class="nickname">{{nickname}}</div>
                    <div class="description">{{description}}</div>
                </div>
            </div>
        {{/each}}
        {{#with show_all}}
            <div class="show_all">
                <a href="{{url}}" class="show_all_link">{{text}}</a>
            </div>
        {{/with}}
    {{/with}}
</div>

{{#with expirience}}
<div class="expirience">
    <div class="expirience_title">{{title}}</div>
    <span class="expirience_badge">{{badge}}</span>

    <div class="expirience_list">
        {{#each list}}
            <div class="list">
                <div class="expirience_name">{{name}}</div>
                <div class="expirience_details">{{details}}</div>
            </div>
        {{/each}}
    </div>
</div>
{{/with}}

<footer class="page_block">
    {{> divider}}
    <div class="footer">
        <div>
            {{> logo}}
            <span class="footer_copyright">Copyright 2023-2024</span>
        </div>

        {{#each footer}}
            <div>
                <span class="footer_title">{{title}}</span>
                {{> nav list=links isVertical=true}}
            </div>
        {{/each}}
    </div>
</footer>